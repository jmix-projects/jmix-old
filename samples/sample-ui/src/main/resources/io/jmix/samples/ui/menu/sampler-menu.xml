        </menu>

        <menu id="notifications" image="mainmenu/dialogsAndNotifications.svg">
            <item id="notification-type" docUrlSuffix="gui_notifications" image="mainmenu/dialogsAndNotifications.svg"/>
            <item id="notification-position" docUrlSuffix="gui_notifications"
