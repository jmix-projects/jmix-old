<menu-config xmlns="io/jmix/samples/ui/menu/sampler-menu.xsd">

    <menu id="components" image="mainmenu/components.svg">
        <menu id="browserframe">
            <item id="browserframe-classpath" docUrlSuffix="gui_BrowserFrame" splitEnabled="true"
                  image="components/browserframe/browserframe-classpath.png"/>
            <item id="browserframe-relative" docUrlSuffix="gui_BrowserFrame" splitEnabled="true"
                  image="components/browserframe/browserframe-relative.png"/>
            <item id="browserframe-theme" docUrlSuffix="gui_BrowserFrame" splitEnabled="true"
                  image="components/browserframe/browserframe-theme.png"/>
            <item id="browserframe-url" docUrlSuffix="gui_BrowserFrame" splitEnabled="true"
                  image="components/browserframe/browserframe-url.png"/>
        </menu>

        <menu id="button">
            <item id="button-simple" docUrlSuffix="gui_Button" image="components/button/button-simple.png"/>
            <item id="button-localized" docUrlSuffix="gui_Button" image="components/button/button-localized.png"/>
            <item id="button-action" docUrlSuffix="gui_Button" image="components/button/button-action.png"/>
